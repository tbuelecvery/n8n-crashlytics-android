# ----------------------------
# n8n Core
# ----------------------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678
WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=replace-with-a-32-plus-char-random-string
GENERIC_TIMEZONE=Asia/Seoul

# ----------------------------
# Postgres
# ----------------------------
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_dev_password
POSTGRES_PORT=5432

# ----------------------------
# Redis
# ----------------------------
REDIS_PORT=6379

# ----------------------------
# Worker scaling
# ----------------------------
N8N_WORKERS=1

# ----------------------------
# Local repo mount (target repository for auto-fix + commit + push)
# Use absolute path on your machine.
# ----------------------------
TARGET_REPO_PATH=/Users/you/path/to/elecvery-android
TARGET_REPO_DEFAULT_BRANCH=main

# ----------------------------
# Git identity used inside container
# ----------------------------
GIT_USER_NAME=elecvery-bot
GIT_USER_EMAIL=elecvery-bot@example.com

# ----------------------------
# MCP Bridge endpoint (n8n calls this via HTTP Request nodes)
# You can point to a local bridge service or internal gateway.
# ----------------------------
MCP_BRIDGE_BASE_URL=http://host.docker.internal:8090
MCP_BRIDGE_TOKEN=replace-me

# ----------------------------
# Repository metadata for GitHub links/issue creation
# ----------------------------
GITHUB_OWNER=tbuelecvery
GITHUB_REPO=elecvery-android

# ----------------------------
# Slack defaults
# ----------------------------
SLACK_DEFAULT_CHANNEL_ID=C04QWTC2PT4

# ----------------------------
# Demo mode
# false: apply_recommended_fix.sh is no-op unless target repo has scripts/auto-fix-crashlytics.sh
# true: appends a line to .automation/n8n-crashlytics-demo.log for smoke testing commit/push path
# ----------------------------
AUTO_FIX_DEMO_MODE=false

# ----------------------------
# Optional tunnel for external webhooks (Crashlytics -> local n8n)
# e.g. https://xxxx.ngrok-free.app
# ----------------------------
PUBLIC_WEBHOOK_BASE_URL=
