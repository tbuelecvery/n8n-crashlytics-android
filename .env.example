# ----------------------------
# n8n Core
# ----------------------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678
WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=replace-with-a-32-plus-char-random-string
GENERIC_TIMEZONE=Asia/Seoul

# ----------------------------
# Postgres
# ----------------------------
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_dev_password
POSTGRES_PORT=5432

# ----------------------------
# Redis
# ----------------------------
REDIS_PORT=6379

# ----------------------------
# Local repo mount (target repository for auto-fix + commit + push)
# Use absolute path on your machine.
# ----------------------------
TARGET_REPO_PATH=/Users/you/path/to/elecvery-android
TARGET_REPO_DEFAULT_BRANCH=main

# ----------------------------
# Git identity used inside container
# ----------------------------
GIT_USER_NAME=elecvery-bot
GIT_USER_EMAIL=elecvery-bot@example.com

# ----------------------------
# AI + API tokens (used directly by n8n HTTP Request nodes)
# ----------------------------
OPENAI_API_KEY=replace-with-openai-api-key
OPENAI_MODEL=gpt-4o-mini
SLACK_BOT_TOKEN=xoxb-replace-me
GITHUB_TOKEN=ghp_replace_me

# ----------------------------
# Repository metadata for GitHub links/issue creation
# ----------------------------
GITHUB_OWNER=tbuelecvery
GITHUB_REPO=elecvery-android

# ----------------------------
# Slack defaults
# ----------------------------
SLACK_DEFAULT_CHANNEL_ID=C04QWTC2PT4
